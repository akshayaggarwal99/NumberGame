<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".NumberGameSplash" >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">  </ScrollView>

    <ImageView
        android:id="@+id/splash_math_expert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/math_expert" />

    <ImageView
        android:id="@+id/splash_single_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/splash_math_expert"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/single_player" />

    <ImageView
        android:id="@+id/splash_multi_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/splash_single_player"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/multi_player" />
    <ImageView
        android:id="@+id/splash_think_tank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/splash_multi_player"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/think_tank_main" />
    <ImageView
        android:id="@+id/splash_math_tricks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/splash_think_tank"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/math_tricks" />



    <com.melnykov.fab.FloatingActionButton
                android:id="@+id/splash_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:src="@drawable/ic_action_star"
                fab:fab_type="normal"
                fab:fab_shadow="true"
                fab:fab_colorNormal="@color/accent"
                fab:fab_colorPressed="@color/accent_pressed"
                fab:fab_colorRipple="@color/ripple"
        android:layout_marginLeft="77dp"
                android:layout_marginStart="77dp"
        android:layout_alignTop="@+id/splash_share"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/splash_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:src="@drawable/d_share"
                fab:fab_type="normal"
                fab:fab_shadow="true"
                fab:fab_colorNormal="@color/accent"
                fab:fab_colorPressed="@color/accent_pressed"
                fab:fab_colorRipple="@color/ripple"
                android:layout_marginRight="58dp"
                android:layout_marginEnd="58dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="46dp" />




</RelativeLayout>