<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/multi_bottom_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/boundary" />

    <TableLayout
        android:id="@+id/bottom_tl_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:stretchColumns="*" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" >

                <ImageView
                    android:id="@+id/iv_bottom_correct_icon"
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:src="@drawable/coins" />

                <TextView
                    android:id="@+id/bottom_correct_questions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_bottom_correct_icon"
                    android:gravity="center_vertical"
                    android:text="5"
                    android:textColor="#fffc00"
                    android:textSize="30sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_bottom_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" >

                <ImageView
                    android:id="@+id/iv_bttom_timer_icon"
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:src="@drawable/clock" />

                <TextView
                    android:id="@+id/bottom_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_bttom_timer_icon"
                    android:gravity="center_vertical"
                    android:text="90"
                    android:textColor="#fffc00"
                    android:textSize="30sp" />
            </RelativeLayout>
        </TableRow>
    </TableLayout>

    <RelativeLayout
        android:id="@+id/bottom_question_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bottom_tl_navigation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/bottom_question"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_shape"
            android:gravity="center"
            android:padding="5dp"
            android:text="5-3"
            android:textColor="#FFF"
            android:textSize="30dp" />

        <RelativeLayout
            android:id="@+id/bottom_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bottom_question"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:paddingBottom="20dp" >

            <TextView
                android:id="@+id/b_option_a"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/button_shape_small"
                android:gravity="center"
                android:text="130"
                android:textColor="#FFF"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/b_option_b"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/b_option_a"
                android:background="@drawable/button_shape_small"
                android:gravity="center"
                android:text="84"
                android:textColor="#FFF"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/b_option_c"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/b_option_b"
                android:background="@drawable/button_shape_small"
                android:gravity="center"
                android:text="230"
                android:textColor="#FFF"
                android:textSize="30dp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>